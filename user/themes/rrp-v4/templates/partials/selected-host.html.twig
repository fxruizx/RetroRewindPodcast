<article class="host-intro-block">
    <div class="host-intro-block__art-wrap">
        {% set coverImg = page.media.images|first %}
        {% if page.header.hostSocialMediaImage %}
            <img class="host-intro-block__host-art" src="{{ page.header.hostSocialMediaImage }}" title="{{ page.title }}" alt="{{ page.title }}"/>
        {% else %}
            {{ coverImg.html(page.title,page.title,'host-intro-block__host-art') }}
        {% endif %}
    </div>
    <div class="host-intro-block__copy-links">
        <h1><small>{{ page.header.hostRank }}</small><br/>{{ page.title }}</h1>
        <p class="hide-mobile">{{ page.summary }}</p>
    </div>
    
</article>